#include <stdio.h>

main() {
  // Declarar variáveis
  int idade;
  char nome [40];
  
  // Estrutura de decisão/seleção
  printf("Qual é o seu nome? ");
  fgets(nome, 40, stdin);

  printf("\nDigite a sua idade: ");
  scanf("%d", &idade);

  if (idade >= 18){
    printf("\n%s, você é maior de idade!", nome);
    printf("\n Sua idade é %d anos", idade);
  }else{
    printf("\n%s, você é menor de idade", nome);
    printf("\n Sua idade é %d anos", idade);
  }
}
